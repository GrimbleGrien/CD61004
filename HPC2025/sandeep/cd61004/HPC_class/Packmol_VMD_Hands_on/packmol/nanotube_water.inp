tolerance 2.0
filetype xyz

# Define output file
output water_in_nanotube.xyz

# First component: Nanotube
structure nanotube_10x10_5nm.xyz
  number 1
  fixed 0. 0. 0. 0. 0. 0. # Place the nanotube at the origin
end structure

# Second component: Water molecules
structure water.xyz
  number 200  # Specify the number of water molecules you want inside the nanotube
  inside cylinder 0. 0. 0. 0. 0. 1. 6.64 52.10  # Cylinder's axis along Z, radius 6.64 Å, length 52.10 Å
end structure

